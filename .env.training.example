# Copy this file to .env.training.local and fill real values.

# Required for slide capture
RECORD_BASE_URL=https://pos-system-wiy1.onrender.com
RECORD_EMAIL=your-admin-email@example.com
RECORD_PASSWORD=your-admin-password

# Required for narrated video build (unless TTS_PROVIDER=none)
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# Optional
RECORD_HEADLESS=true
RECORD_BROWSER=chromium
TRAINING_TOTAL_SECONDS=180
# Slower voice while preserving slide sync (0.5 to 2.0, where 1.0 is normal)
TRAINING_SPEECH_RATE=0.90
# Set to none to skip ElevenLabs and generate silent audio
# TTS_PROVIDER=none
